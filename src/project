    #mb hitting 5 on number could trigger a little chat event? Provide more character interaction?
    birch_dict = companion_list[0]
    friendship = birch_dict.get("Friendship")
    increase = min((friendship//6), 5)
    player_name = player_dict.get("Name")
    number = random.randrange(1,6)
    if friendship < 6:
        if number == 1:
